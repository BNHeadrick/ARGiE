<?xml version="1.0" encoding="utf-8"?>

    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
	  	android:layout_height="match_parent"
	  	android:orientation="vertical">
    
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:weightSum="1.0"
	        android:gravity="center"
	        android:layout_weight="1">
	    
	
		    <Button
		        android:id="@+id/bSaveGame"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight=".3"
		        android:text="@string/create_game_screen_save_button" />
		    
	
		    
		    <ToggleButton
		        android:id="@+id/tbEditGame"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight=".3"
		        
		        android:textOn="@string/create_game_screen_edit_button_on"
		    	android:textOff="@string/create_game_screen_edit_button_off" />
		     
		    <Button
		        android:id="@+id/bClearGame"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight=".3"
		        android:text="@string/create_game_screen_clear_button" />
		    
		    
		    
		    
		</LinearLayout>
		
	    
	    <fragment
			android:id="@+id/map"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="40"
			class="com.google.android.gms.maps.SupportMapFragment"/>
	    
		
		
		<LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:weightSum="1.0"
	        android:gravity="center"
	        android:layout_weight="1">
		    
		     
		    <Button
		        android:id="@+id/bDeleteQuest"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight=".5"
		        android:text="@string/create_game_screen_delete_quest_button" />
		    
		    <Button
		        android:id="@+id/bGameOptions"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight="1"
		        android:text="@string/create_game_screen_game_options_button"
		        android:visibility="invisible"/>
		        
		        
		    
		    <Button
		        android:id="@+id/bMoveQuest"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="?android:attr/selectableItemBackground"
		        android:padding="10dip"
		        android:layout_weight=".5"
		        android:text="@string/create_game_screen_move_quest_button"/>
		    
		    
		    
		</LinearLayout>
	</LinearLayout>
	    

